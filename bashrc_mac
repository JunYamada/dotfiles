export PATH=$PATH:/Users/daruman/bin
export PATH=$PATH:/usr/local/share/npm/bin

# コマンドエイリアス
alias ll='ls -FlhG'
alias la='ls -FlaG'
# brewでいれた最新のvimを使用
# via@http://supermomonga.com/2013/07/03/macvim-with-lua-features/
alias vi='vim'
alias vim='/usr/local/Cellar/macvim/HEAD/MacVim.app/Contents/MacOS/Vim'

# ctrl+rでhistory検索した際、行き過ぎた時戻るのにctrl+s出来るようにする
# via@http://d.hatena.ne.jp/poch-7003/20090927/1254034581
# スクリーンロックを未定義にする
stty stop undef
stty start undef

# コマンド履歴を共有
# via@http://iandeth.dyndns.org/mt/ian/archives/000651.html
function share_history {
    history -a
    history -c
    history -r
}
PROMPT_COMMAND='share_history'
shopt -u histappend
export HISTSIZE=9999

echo '.bashrc loaded'

